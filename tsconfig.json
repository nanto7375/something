{
  "compilerOptions": {
    "moduleResolution": "node",
    "lib": ["es2015","es2016","es2017","es2018","es2019","es2020","DOM"],
    "strictNullChecks": false,
    "module": "commonjs",
    "removeComments": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}